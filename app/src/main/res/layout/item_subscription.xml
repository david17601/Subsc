<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/subscription_item_background">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/subscriptionIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/circular_background" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subscriptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa subskrypcji"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/subscriptionPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cena"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subscriptionRenewalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data odnowienia"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/subscriptionDeleteIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_delete"
        android:layout_gravity="center"
        android:contentDescription="Usuń subskrypcję" />

</LinearLayout>
